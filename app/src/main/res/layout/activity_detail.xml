<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.materialme.detail_activity">

    <ImageView
        android:id="@+id/sportsimgesdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:src="@drawable/img_tennis"> </ImageView>

    <TextView
        android:id="@+id/titledetail"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sportsimgesdetail"
        android:text="@string/title_placeholder"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_marginStart="20sp" />


    <TextView
        android:id="@+id/subTitledetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textColor="#101010"
        android:textSize="20sp"
        android:layout_below="@id/sportsimgesdetail"
        />
</RelativeLayout>

</ScrollView>